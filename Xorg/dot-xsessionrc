# Terminating all instances of vim and neovim that may be open in a tmux session
pkill vim

# Terminating all instances of the X Virtual Frame Buffer
pkill Xvfb

# Terminating all instances of the X11 VNC Server
pkill x11vnc

# Terminating all instances of the ssh client
pkill '\bssh\b'

# Terminating pulseaudio (and allow applications to start it on demand)
pkill pulseaudio

[ -f ~/.local/share/wm/scripts/login ] && . ~/.local/share/wm/scripts/login

# vim: ft=sh
