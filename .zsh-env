# FZF
export FZF_DEFAULT_OPTS=--bind=ctrl-j:accept,ctrl-k:kill-line,\
ctrl-p:up,ctrl-n:down,\
alt-p:previous-history,alt-n:next-history

# less
export LESS="-R -F -X"

#
# Adding to $PATH
#

if [[ $(uname) =~ BSD ]]
then
    exit
fi

insertpath () {
    case ":$PATH:" in
        *:"$1":*)
            ;;
        *)
            PATH=${1}:${PATH}
    esac
}

# Adding ~/bin to $PATH
insertpath ~/bin

export PATH
